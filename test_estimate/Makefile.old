INCLUDE += -I../../Include
LIB = -L/opt/sdsol/lib -L/usr/local/lib -L./lib/armhf  -lppe -lpthread -lrt -ljsoncpp 
LIB += $(shell pkg-config --cflags --libs opencv4)

