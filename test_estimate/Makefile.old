TARGET  = test_estimate

.SUFFIXES : .o .cpp
%.o:%.cpp
	$(CXX) $(INCLUDE) $(CFLAGS) $< -o $(basename $@).o 

all : $(TARGET)

$(TARGET) : $(OBJECT)
	$(CXX) -o $@ $(OBJECT) $(LIB)
#	cp $(TARGET) /opt/sdsol/bin
	
clean :
	rm -rf *.o $(TARGET)
